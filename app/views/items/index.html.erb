<!-- 執行 ajax加入購物車數量 -->

<% content_for :header do  %>
<script type="text/javascript">
	jQuery(function($) {
		// body...
		$('.add_cart').click(function(){
			$.getJSON('items/' +$(this).attr('data-value') +'/add_cart', function(json){
				$('#cart_counter').html(json.counter);
			});
			return false;
		});
	});
</script>
<% end %>


<h1>Hi 我是首頁</h1>

<table>
  <thead> 
    
    <tr>
      <!-- <th colspan="3"></th> -->
     
      <th>圖片</th>
      <th>類別</th>
      <th>名稱</th>
      <th>價格</th>
      <th>管理</th>
      
    </tr>
  </thead>

  <tbody>
    <% @item.each do |i| %>
      <tr> 
        
        
        <th><%= image_tag(i.cover.url(:icon), size: "100x100", ) %></th>
        <th><%= i.cate.name %></th>
        
        <th><%= i.name %></th>
        <th><%= i.price %></th>
        <th><a href="#" data-value = <%= i.id %> class="add_cart"> <i class="fa fa-cart-plus"></i>加入購物車</th> </a>
        <!-- <td><%#= link_to 'Show', dashboard_admin_item %></td> -->
        
      </tr>
    <% end %>
  </tbody>
</table>